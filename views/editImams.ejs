<main class="main">
    <section>
      <div>
        <h2>Edit Imam</h2>
        <form action="/imams/edit/<%= imam._id %>" method="POST" enctype="multipart/form-data">
          <label for="name">Name:</label>
          <input type="text" name="name" value="<%= imam.name %>" required>
          <label for="title">Title:</label>
          <input type="text" name="title" value="<%= imam.title %>" required>
          <label for="description">Description:</label>
          <textarea name="description" required><%= imam.description %></textarea>
          
          <label for="currentImage">Current Image:</label>
          <img src="/<%= imam.image %>" alt="Current Image" style="max-width: 100px;">
          <input type="file" name="currentImage">
        

          <label for="twitter">Twitter:</label>
          <input type="url" name="twitter" value="<%= imam.twitter %>">
          <label for="facebook">Facebook:</label>
          <input type="url" name="facebook" value="<%= imam.facebook %>">
          <label for="instagram">Instagram:</label>
          <input type="url" name="instagram" value="<%= imam.instagram %>">
          <label for="linkedin">LinkedIn:</label>
          <input type="url" name="linkedin" value="<%= imam.linkedin %>">
          <label for="tiktok">TikTok:</label>
          <input type="url" name="tiktok" value="<%= imam.tiktok %>">
          <label for="youtube">YouTube:</label>
          <input type="url" name="youtube" value="<%= imam.youtube %>">
          <label for="whatsapp">WhatsApp:</label>
          <input type="url" name="whatsapp" value="<%= imam.whatsapp %>">
          <button type="submit">Update Imam</button>
        </form>
      </div>
    </section>
  </main>
  
         
  