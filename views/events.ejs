<!-- views/events.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Events</title>
</head>
<body>
  <h1>Manage Events</h1>
  <a href="/events/new">Add Event</a>
  <% if (events.length > 0) { %>
    <ul>
      <% events.forEach(event => { %>
        <li>
          <h2><%= event.bookTitle %></h2>
          <p><%= event.description %></p>
          <p><%= event.dateAndDuration %></p>
          <p><%= event.day %></p>
          <% if (event.imageOfBook) { %>
            <img src="/<%= event.imageOfBook %>" alt="Event Image" style="max-width: 200px;">
          <% } %>
          <a href="/events/edit/<%= event._id %>">Edit</a>
          <form action="/events/delete/<%= event._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No events</p>
  <% } %>
</body>
</html>
